{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Rust Project (LinossRust)",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compile the Rust project LinossRust using cargo build."
    },
    {
      "label": "AI Performance Status",
      "type": "shell",
      "command": "python3",
      "args": ["ai_performance_advisor.py", "--status"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Check current AI performance window and get development recommendations"
    },
    {
      "label": "Start AI Performance Monitoring",
      "type": "shell",
      "command": "python3",
      "args": ["ai_performance_advisor.py", "--watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Start continuous AI performance monitoring with automatic notifications"
    },
    {
      "label": "Update Copilot Settings (Dry Run)",
      "type": "shell",
      "command": "python3",
      "args": ["ai_performance_advisor.py", "--update-settings", "--dry-run"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Preview what Copilot settings would be updated based on current performance window"
    },
    {
      "label": "Update Copilot Settings",
      "type": "shell",
      "command": "python3",
      "args": ["ai_performance_advisor.py", "--update-settings"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Update VS Code Copilot settings based on current AI performance window"
    },
    {
      "label": "Run Checkpoint Tests",
      "type": "shell",
      "command": "cargo",
      "args": ["test", "checkpoint::tests", "--", "--nocapture"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "Run comprehensive checkpoint functionality tests"
    },
    {
      "label": "AI-Optimized Development Session",
      "type": "shell",
      "command": "python3",
      "args": [
        "-c",
        "import subprocess; import sys; subprocess.run([sys.executable, 'ai_performance_advisor.py', '--status']); print('\\nðŸš€ Starting AI-optimized development session...'); print('ðŸ’¡ Check the recommendations above and adjust your workflow accordingly!')"
      ],
      "group": "build",
      "dependsOrder": "sequence",
      "dependsOn": ["AI Performance Status"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "detail": "Start a development session with AI performance optimization guidance"
    }
  ]
}
